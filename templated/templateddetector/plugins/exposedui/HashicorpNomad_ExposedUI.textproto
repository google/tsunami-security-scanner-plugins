  name: "hashicorpnomad_exposed_ui_fingerprint"
  http_request: {
    method: GET
    uri: "/ui/"
    response: {
      http_status: 200
      expect_all: {
        conditions: { body {} contains: 'Copyright (c) HashiCorp, Inc.' }
        conditions: { body {} contains: '<title>Nomad</title>' }
      }
    }
  }
}

